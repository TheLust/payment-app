<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Log out"
            android:textSize="45sp"
            android:textColor="@color/main_color"
            app:drawableTint="@color/main_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.096"/>
    <TextView
            android:id="@+id/uuid_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="UUID:"
            android:textSize="20sp"
            android:textColor="@color/main_color"
            app:drawableTint="@color/main_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintVertical_bias="0.228"/>
    <Button
            style="@style/Widget.MaterialComponents.Button"
            app:cornerRadius="20dp"
            android:layout_width="260dp"
            android:layout_height="56dp"
            android:text="Log out"
            android:minWidth="340dp"
            android:minHeight="60dp"
            android:textSize="16sp"
            android:backgroundTint="@color/main_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            android:id="@+id/logoutButton" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.847"/>

</androidx.constraintlayout.widget.ConstraintLayout>